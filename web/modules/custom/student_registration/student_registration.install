/**
 * Implements hook_update_N().
 */
function student_registration_update_9001() {
  $average_mark = [
    'type' => 'numeric',
    'description' => t("Average Mark"),
    'precision' => 5,
    'scale' => 2,
    'not null' => TRUE,
    'default' => 0,
  ];
  $schema = Database::getConnection()->schema();
  $schema->addField('student_registration', 'average_mark', $average_mark);
}


/**
 * Implements hook_update_N().
