{#
/**
 * @file
 * Overrides default theme format the sidebar region.
 *
 * Adds sidebar's formatting that repares main sidebar grid after
 * two aside elements (sidebar_top and sidebar) by attaching sidebar.css
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region--' ~ region|clean_class,
  ]
%}

{#{{ attach_library('bakayev_theme/sidebar') }}#}

{% if content %}
  <aside{{ attributes.addClass(classes) }}>
    SBTopBegin{{ content }}SBTopEnd

  </aside>
{% endif %}
